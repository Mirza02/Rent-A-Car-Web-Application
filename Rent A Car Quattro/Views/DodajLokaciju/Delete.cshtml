@model Rent_A_Car_Quattro.Models.Poslovnica

@{
    ViewData["Title"] = "Delete";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Poslovnica</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Longitude</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.longitude)</dd>
        <dt class="col-sm-2">Latitude</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.latitude)</dd>
        <dt class="col-sm-2">Grad</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.grad)</dd>
        <dt class="col-sm-2">Opis</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.opis)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
