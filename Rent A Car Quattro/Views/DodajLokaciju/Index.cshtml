@model IEnumerable<Rent_A_Car_Quattro.Models.Poslovnica>

@{
    ViewData["Title"] = "Index";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Insert" class="btn btn-primary">Create New</a>
</p>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>Grad</th>
                <th>Opis</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.latitude)</td>
                    <td>@Html.DisplayFor(modelItem => item.longitude)</td>
                    <td>@Html.DisplayFor(modelItem => item.grad)</td>
                    <td>@Html.DisplayFor(modelItem => item.opis)</td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
